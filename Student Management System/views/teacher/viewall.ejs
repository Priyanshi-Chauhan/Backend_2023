<header>
  <div class="container-fluid bg-info text-center" style="height: 50px">
    <div class="row">
      <div class="col-sm-10">
        <h4 style="padding-top: 8px">Student Management system</h4>
      </div>
      <div class="col-sm-2">
        <a href="/"><button style="margin-top: 3px" type="button" class="btn btn-primary">Logout</button></a>
      </div>
    </div>
    <div>

    </div>
  </div>
</header>
<br>
<div class="container">
<div style="display: flex;">
  
  <div style="margin-left:1000px; margin-top: 10px;">
    <button class="btn btn-primary">
      <a href="/teacher/add" style="color:white">Add Student</a>
    </button>
  </div>
</div>
<br>
<center><h4>Student Details</h4></center>
<br>
<div class="tableDiv">
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Roll No.</th>
        <th scope="col">Name</th>
        <th scope="col">Date of Birth</th>
        <th scope="col">Score</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% student.forEach(element=> { %>
        <tr class="head">
          <td>
            <%= element.r %>
          </td>
          <td>
            <%= element.name %>
          </td>
          <td>
            <%= element.dob %>
          </td>
          <td>
            <%= element.score %>
          </td>
          <td>
            <a href="/teacher/edit/<%= element._id %> "><img style="margin: 0px 5px;"
                src="https://img.icons8.com/material-outlined/30/000000/edit.png" /></a>
            <a href="/teacher/delete/<%= element._id %> "><img style="margin: 0px 5px;"
                src="https://img.icons8.com/ios-glyphs/30/000000/filled-trash.png" /></a>
          </td>
        </tr>
        <%}) %>
    </tbody>
  </table>
</div>
</div>